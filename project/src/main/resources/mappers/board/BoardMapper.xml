<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.project.board.mapper.BoardMapper">
	
	<sql id="search">
		<if test="type !=null and keyword !=null">
			<trim prefix="(" suffix=") AND" prefixOverrides="OR">
				<foreach item="type" collection="types">			
					<!-- 앞에 붙는 OR 는 삭제  -->
						<trim prefix="OR">
							<!-- 무조건 OR 로 시작 -->
							<choose>
								<when test="type == 'T'.toString()">
									(TITLE LIKE '%' || #{keyword} || '%')
								</when>
								<when test="type == 'C'.toString()">
									(CONTENT LIKE '%' || #{keyword} || '%')
								</when>
								<when test="type == 'U'.toString()">
									(USER_ID LIKE '%' || #{keyword} || '%')
								</when>
							</choose>
						</trim>
				</foreach>
			</trim>
		</if>
	</sql>
	<select id="getList" resultType="boardVO">
		SELECT  BNO
    		  , TITLE
		      , CONTENT		
		      , USER_ID
		      , TO_CHAR(REGDATE,'YYYY-MM-DD HH24:MI') AS REGDATE
		      , TO_CHAR(UPDATEDATE,'YYYY-MM-DD HH24:MI') AS UPDATEDATE
		      , SECRET
		FROM
		(	
			SELECT  /*+ INDEX_DESC(TBL_BOARD) */ 
			ROWNUM RN, BNO, TITLE, CONTENT, USER_ID, REGDATE, UPDATEDATE, SECRET 
			FROM TBL_BOARD WHERE
		<include refid="search" /> 
		<![CDATA[	
			 ROWNUM <= ${pageNum} * #{amount}
		]]>	
		)
			<!-- where 절이 먼저 되기 때문에 where 절에서 rn 을 쓸 수 없음 -->
			<!-- 해당 페이지 마지막 게시글 번호   -->
		<![CDATA[	
		WHERE RN > (#{pageNum}-1) * #{amount} 
		]]>
		<!-- 해당 페이지 시작 번호  -->
	</select>

	<insert id="insert" parameterType="boardVO">
		<!-- parameter 는 생략 가능 :Mapper 에서 연결된 걸로 가져옴   -->
		<selectKey keyProperty="bno" order="BEFORE" resultType="long">
			SELECT NVL(MAX(BNO),0)+1 FROM TBL_BOARD
		</selectKey>
			INSERT INTO TBL_BOARD(BNO, TITLE, CONTENT, USER_ID, SECRET)
			VALUES( #{bno}
					, #{title}
					, #{content}
					, #{user_id}
					<!-- , #{secret}) -->
					, CASE WHEN  #{secret} = 1 THEN '1' ELSE '0' END
					)
	</insert>
	
	<select id="read" parameterType="long" resultType="boardVO">
	<!-- parameter 는 생략 가능 :Mapper 에서 연결된 걸로 가져옴   -->
		SELECT * FROM TBL_BOARD
		WHERE BNO = #{bno}
	</select>
		
	<delete id="delete">
		DELETE FROM TBL_BOARD WHERE BNO = #{bno}
	</delete>

	<update id="update">
		UPDATE TBL_BOARD
		SET   TITLE = #{title}
			, CONTENT = #{content}
			, USER_ID = #{user_id}
			, UPDATEDATE = SYSDATE
			, SECRET =#{secret}
		WHERE BNO = #{bno}
	</update>
	
	<select id="getTotal" resultType="_int">
		SELECT COUNT(BNO) FROM TBL_BOARD
		<where>
		<!-- search 항목이 null 일때 (검색어가 들어오지 않았을 때) 는 where 절은 실행 X  -->
			<trim suffixOverrides="AND">
				<include refid="search"/>
			</trim>
		</where>
	</select>
	
</mapper>
